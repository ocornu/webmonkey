<?xml version="1.0"?>
<?xml-stylesheet href="chrome://global/skin/" type="text/css"?>
<?xml-stylesheet href="chrome://webmonkey/content/manage.css" type="text/css"?>
<?xul-overlay href="chrome://webmonkey/content/pages-overlay.xul"?>

<!DOCTYPE dialog SYSTEM "chrome://webmonkey/locale/webmonkey.dtd">

<window id="greasemonkey"
  windowtype="Greasemonkey:Manage"
  xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
  title="&manage.title;"
  persist="screenX screenY width height"
  orient="vertical">

  <script type="application/x-javascript" src="chrome://global/content/nsDragAndDrop.js" />
  <script type="application/x-javascript" src="chrome://global/content/nsTransferable.js" />
  <script type="application/x-javascript" src="chrome://webmonkey/content/lib/utils.js" />
  <script type="application/x-javascript" src="chrome://webmonkey/content/manage.js" />

  <stringbundle id="gm-manage-bundle" src="chrome://webmonkey/locale/gm-manage.properties" />

  <grid flex="1" orient="vertical">
    <columns>
      <column id="col_left"
        flex="1" />
      <column id="col_right"
        flex="3" />
    </columns>

    <rows>
      <row flex="1" orient="horizontal">
        <vbox flex="1">
          <listbox id="lstScripts"
            flex="10"
            onkeypress="return listboxKeypress(event);"
            ondraggesture="nsDragAndDrop.startDrag(event, dndObserver);"
            ondragover="nsDragAndDrop.dragOver(event, dndObserver);"
            ondragdrop="nsDragAndDrop.drop(event, dndObserver);" />
          <description flex="1">&manage.reorderHelp;</description>
        </vbox>
        <vbox>
          <description id="ctlHeader" />
          <description id="ctlDescription" />
          <vbox id="pages-control"
            flex="1" />
        </vbox>
      </row>
      <row>
        <hbox>
          <checkbox id="chkEnabled"
            label="&manage.label.chkEnabled;"
            checked="true" />
          <button id="btnEdit"
            label="&manage.label.btnEdit;" />
        </hbox>
        <vbox>
          <hbox flex="1" />
          <hbox>
            <button id="btnUninstall"
              label="&manage.label.btnUninstall;" />
            <checkbox id="chkUninstallPrefs"
              label="&manage.label.chkUninstall;"
              checked="false" />
            <spacer flex="1"/>
            <button label="&manage.button.close;" oncommand="close();"/>
          </hbox>
        </vbox>
      </row>
    </rows>
  </grid>

</window>
